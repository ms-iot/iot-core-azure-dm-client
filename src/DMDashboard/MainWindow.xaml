                <Button Grid.Row="2" Margin="3" Content="Connect to Device" Click="OnDeviceConnect" Width="200" IsEnabled="False" x:Name="DeviceConnectButton" HorizontalAlignment="Center"/>
            </Grid>
            <ScrollViewer Grid.Row="0" Grid.Column="1">
                <StackPanel Orientation="Vertical" x:Name="ConnectedProperties" IsEnabled="False" Grid.RowSpan="2">

                    <Border BorderThickness="2" Margin="15" BorderBrush="DarkGray" Width="600" Height="1" />
                    <Grid>
                        <Grid.ColumnDefinitions>
