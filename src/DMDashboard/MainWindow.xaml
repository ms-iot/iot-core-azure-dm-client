                                                       ConnectionString="{Binding ElementName=AzureStorageConnectionString, Path=Text}"
                                                       ContainerName="{Binding ElementName=AzureStorageContainerName, Path=Text}"
                                                       EnableExport="False"
                                                       FileNamesString=""/>
