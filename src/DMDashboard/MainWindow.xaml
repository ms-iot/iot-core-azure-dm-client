                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="490"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0">Azure Blob Connection String</Label>
                        <Border Grid.Row="0" Grid.Column="1" Margin="3" Background="#F8F8F8">
                            <TextBox Grid.ColumnSpan="2" x:Name="AppConnectionString" TextChanged="AppInstallButtonActivation"  HorizontalAlignment="Stretch"  />
                        </Border>

                        <Label Grid.Row="1" Grid.Column="0">Azure Blob Container Name</Label>
                        <Border Grid.Row="1" Grid.Column="1" Margin="3" Background="#F8F8F8">
                            <TextBox Grid.ColumnSpan="2" x:Name="AppContainerName" TextChanged="AppInstallButtonActivation"  HorizontalAlignment="Stretch" />
                        </Border>

                        <Label Grid.Row="2" Grid.Column="0">App Package Family Name</Label>
                        <Border Grid.Row="2" Grid.Column="1" Margin="3" Background="#F8F8F8">
                            <TextBox x:Name="AppPackageFamilyName" TextChanged="AppInstallButtonActivation" HorizontalAlignment="Stretch" />
                        </Border>

                        <Label Grid.Row="3" Grid.Column="0">App Package (*.appx)</Label>
                        <Border Grid.Row="3" Grid.Column="1" Margin="3" Background="#F8F8F8">
                            <TextBox x:Name="AppAppxPath" TextChanged="AppInstallButtonActivation" HorizontalAlignment="Stretch" />
                        </Border>
                        <Button Grid.Row="3" Grid.Column="2" Margin="3" Click="OnAppxBrowse" HorizontalAlignment="Stretch" >Browse</Button>

                        <Label Grid.Row="4" Grid.Column="0">App Dependency Pacakge (*.appx)</Label>
                        <Border Grid.Row="4" Grid.Column="1" Margin="3" Background="#F8F8F8">
                            <TextBox x:Name="AppDep1AppxPath" HorizontalAlignment="Stretch" />
                        </Border>
                        <Button Grid.Row="4" Grid.Column="2" Margin="3" Click="OnDep1AppxBrowse" HorizontalAlignment="Stretch" >Browse</Button>

                        <Label Grid.Row="5" Grid.Column="0">App Dependency Pacakge (*.appx)</Label>
                        <Border Grid.Row="5" Grid.Column="1" Margin="3" Background="#F8F8F8">
                            <TextBox x:Name="AppDep2AppxPath" HorizontalAlignment="Stretch" />
                        </Border>
                        <Button Grid.Row="5" Grid.Column="2" Margin="3" Click="OnDep2AppxBrowse" HorizontalAlignment="Stretch" >Browse</Button>
                        <Button Grid.Row="6" Grid.Column="1" Margin="3" Click="AppInstallAsync" HorizontalAlignment="Stretch" x:Name="AppInstallButton">Install App</Button>
                    </Grid>

                    <Border BorderThickness="2" Margin="15" BorderBrush="DarkGray" Width="600" Height="1" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="400"/>
                            <ColumnDefinition Width="400"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Button Grid.Row="0" Grid.Column="1" Margin="3" Content="Apply Desired to DT and Device" Click="OnSetAllDesiredProperties"/>
                        <Button Grid.Row="0" Grid.Column="2" Margin="3" Content="Update DT Reported from Device" Click="OnUpdateDTReported" />
                        <Button Grid.Row="1" Grid.Column="2" Margin="3" Content="Read Reported from DT" Click="OnReadDTReported" />
                    </Grid>


                </StackPanel>
            </ScrollViewer>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                <Button Click="OnExpandAzureStorageExplorer" Margin="3" Width="30" Content="+/-" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Margin="5" FontSize="16" FontWeight="Bold" Text="Azure Storage Explorer" />
            </StackPanel>
            <Grid Grid.Row="1" Grid.Column="0" x:Name="AzureStorageExplorer" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Margin="3" Text="Connection String"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Margin="3" x:Name="StorageConnectionStringBox">
                        <TextBox.Text>&lt;enter connection string&gt;</TextBox.Text>
                    </TextBox>
                </Grid>
                <Grid Grid.Row="1" Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Row="0" Grid.Column="0" Margin="3" Content="List Containers" Click="OnListContainers" Width="200" HorizontalAlignment="Left"/>
                    <ListView Grid.Row="1" Grid.Column="0" Margin="3" x:Name="ContainersList" Width="200" HorizontalAlignment="Left" ScrollViewer.HorizontalScrollBarVisibility="Hidden" Height="200"/>
                    <Button Grid.Row="0" Grid.Column="1" Margin="3" Content="List Blobs" Click="OnListBlobs" Width="200" HorizontalAlignment="Left"/>
                    <ListView Grid.Row="1" Grid.Column="1" Margin="3" x:Name="BlobsList" HorizontalAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Hidden" Height="200">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="500"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding Name}"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Type}"/>
                                    <TextBlock Grid.Column="2" Text="{Binding Uri}"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
